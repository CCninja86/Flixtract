<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nz.co.ninjastudios.flixfinder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ResultListActivity" />
        <activity android:name=".PrimaryShowDetailsActivity" />
        <activity android:name=".SeasonsActivity" />
        <activity android:name=".EpisodesActivity" />
        <activity android:name=".EpisodeDetailsActivity"></activity>
    </application>

</manifest>